{
  "manifest_version": 2,

  "name": "<3 Tabs",
  "description": "Easily save pages as bookmarks and restore them",
  "version": "1.6.1",

  "browser_action": {
    "default_icon": "silver-telegram.png",
    "default_popup": "silver-telegram.html"
  },
  "background": {
    "scripts": ["silver-telegram-menu.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "file:///*",
    "chrome://favicon/*",
    "contextMenus",
    "windows",
    "downloads"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "MacCtrl+Shift+Z"
      }
    }
  }
}
