{
  "manifest_version": 2,

  "name": "silver-telegram",
  "description": "Easily save pages as bookmarks and restore them",
  "version": "1.6.1",
  "author": "Nick.Harvey.Developer@gmail.com",

  "browser_specific_settings": {
    "gecko": {
      "id": "Nick.Harvey.Developer@gmail.com",
      "strict_min_version": "42.0"
    }
  },

  "browser_action": {
    "default_icon": "silver-telegram.png",
    "default_popup": "silver-telegram.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "storage"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "MacCtrl+Shift+Z"
      }
    }
  }
}
