{
  "manifest_version": 2,

  "name": "Silver Telegram",
  "description": "Easily save pages as bookmarks and restore them",
  "version": "1.4",

  "browser_action": {
    "default_icon": "silver-telegram.png",
    "default_popup": "silver-telegram.html"
  },
  "background": {
    "scripts": ["silver-telegram-menu.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "file:///*",
    "chrome://favicon/*",
    "contextMenus",
    "windows",
    "downloads"
  ]
}
